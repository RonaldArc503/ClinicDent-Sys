@model IEnumerable<ClinicDent.Models.PagoViewModel>

@{
    ViewBag.Title = "Pagos";
}

<h2>Pagos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Pago", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Paciente</th>
            <th>Fecha Pago</th>
            <th>Monto Total</th>
            <th>Método Pago</th>
            <th>Tipo Pago</th>
            <th>Estado</th>
            <th>Cuotas</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Paciente)</td>
                <td>@item.FechaPago.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@Html.DisplayFor(modelItem => item.MontoTotal)</td>
                <td>@Html.DisplayFor(modelItem => item.MetodoPago)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoPago)</td>
                <td>@Html.DisplayFor(modelItem => item.EstadoPago)</td>
                <td>@item.CuotasPagadas/@item.TotalCuotas</td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdPago }) |
                    @if (item.TipoPago == "Cuotas" && item.TotalCuotas > 0)
                    {
                        @Html.ActionLink("Cuotas", "UpdateCuota", new { id = item.IdPago }, new { @class = "text-info" }) <text>|</text>
                    }
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdPago }, new { onclick = "return confirm('¿Estás seguro de eliminar este pago?');" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}