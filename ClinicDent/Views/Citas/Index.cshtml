@model IEnumerable<ClinicDent.Models.Citas>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<p>
    <a href="@Url.Action("Create")" class="btn btn-success" title="Crear Nuevo">
        <i class="fas fa-plus"></i>
    </a>
</p>

<table class="table">
    <tr>
        <th>
            Fecha y Hora
        </th>
        <th>
            Estado
        </th>
        <th>
            Dentista
        <th>
            Paciente
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dentistas.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pacientes.nombres)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.id_cita })" title="Editar" class="btn btn-sm btn-primary">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="@Url.Action("Details", new { id = item.id_cita })" title="Detalles" class="btn btn-sm btn-info">
                    <i class="fas fa-eye"></i>
                </a>
                <a href="@Url.Action("Delete", new { id = item.id_cita })" title="Eliminar" class="btn btn-sm btn-danger">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>

    }

</table>
