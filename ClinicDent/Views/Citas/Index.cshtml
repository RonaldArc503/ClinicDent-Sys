@model IEnumerable<ClinicDent.Models.Citas>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha Hora
        </th>

        <th>
            Dentista
        </th>
        <th>
            Paciente
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_hora)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Dentistas.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pacientes.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id_cita }) |
            @Html.ActionLink("Details", "Details", new { id = item.id_cita }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id_cita })
        </td>
    </tr>
}

</table>
