@{
    ViewBag.Title = "Calendario de Citas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="titulo-calendario">Calendario de Citas</h2>

<div id="calendar"></div>

<!-- Estilos de FullCalendar -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />

<!-- Scripts de FullCalendar -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/locales/es.global.min.js"></script>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    .titulo-calendario {
        text-align: center;
        font-size: 2rem;
        margin-top: 30px;
        color: #343a40;
    }

    #calendar {
        max-width: 1000px;
        margin: 40px auto;
        padding: 20px;
        border-radius: 30px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        background-color: white;
        transition: box-shadow 0.3s ease;
    }

    /* Redondear celdas y contenedores */
    .fc-daygrid-day-frame,
    .fc-daygrid-day,
    .fc-timegrid-slot,
    .fc-scrollgrid,
    .fc-scrollgrid-section,
    .fc-view-harness {
        border-radius: 20px !important;
    }

    /* Redondeo fuerte de la estructura */
    .fc .fc-scrollgrid,
    .fc .fc-view-harness {
        border-radius: 20px !important;
        overflow: hidden;
    }

    /* Redondear cabeceras de los días */
    .fc-col-header-cell {
        border-radius: 15px !important;
        text-transform: capitalize;
        background-color: #f1f3f5;
    }

    /* Números del día más grandes */
    .fc .fc-daygrid-day-number {
        font-size: 1rem;
        font-weight: 500;
       
    }

    /* Redondeo para los eventos */
    .fc-event {
        border-radius: 14px;
        padding: 4px 8px;
        font-size: 0.95rem;
        background-color: #198754 !important;
        color: white !important;
        border: none;
    }

    /* Botones */
    .fc .fc-button {
        border-radius: 50px;
        background-color: #0d6efd !important;
        padding: 8px 16px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .fc .fc-button-primary:not(:disabled):hover {
        background-color: #0b5ed7 !important;
    }

    /* Título del mes */
    .fc .fc-toolbar-title {
        font-size: 1.4rem;
        font-weight: 600;
        color: #212529;
    }

    /* Bordes más visibles entre las celdas */
    .fc .fc-daygrid-day,
    .fc .fc-daygrid-day-frame,
    .fc .fc-scrollgrid,
    .fc .fc-scrollgrid td {
        border: 1.5px solid #dee2e6 !important;
    }

    /* Bordes internos en vistas de semana/día */
    .fc .fc-timegrid-slot,
    .fc .fc-timegrid-slot-label,
    .fc .fc-timegrid-axis {
        border-top: 1.5px solid #dee2e6 !important;
    }

    /* Encabezados de los días */
    .fc .fc-col-header-cell-cushion {
        border-bottom: 1.5px solid #dee2e6;
        padding-bottom: 6px;
        display: inline-block;
    }

    /* Resaltar día actual opcional (puedes quitar si no lo quieres) */
    .fc .fc-day-today {
        background-color: #eaf4ff !important;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            locale: 'es',
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek,timeGridDay'
            },
            buttonText: {
                today: 'Hoy',
                month: 'Mes',
                week: 'Semana',
                day: 'Día'
            },
            events: '/Citas/ObtenerEventos',

            eventClick: function (info) {
                info.jsEvent.preventDefault();
                calendar.changeView('timeGridDay', info.event.start);
            },

            eventDidMount: function (info) {
                var hora = new Date(info.event.start);
                var opciones = { hour: '2-digit', minute: '2-digit', hour12: true };
                var horaFormateada = hora.toLocaleTimeString('es-ES', opciones);
                info.el.setAttribute("title", info.event.title + " - " + horaFormateada);
            }
        });

        calendar.render();
    });
</script>
