@model ClinicDent.Models.Usuarios

@{
    ViewBag.Title = "Login";
}

<!-- Include Google Fonts for Roboto -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    body {
        background-color: #f4f4f4;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        font-family: 'Roboto', sans-serif;
        width: 100vw;
        overflow-x: hidden;
    }

    .login-container {
        display: flex;
        width: 1000px;
        height: 600px;
        background-color: #fff;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        border-radius: 12px;
        overflow: hidden;
        margin: 0 auto;
    }

    .left-panel {
        width: 50%;
        background-color: #116AEF;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #fff;
        font-size: 3em;
        font-weight: 700;
        text-align: center;
        border-top-right-radius: 102px;
        border-bottom-right-radius: 102px;
    }

    .right-panel {
        width: 50%;
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-color: #fff;
    }

        .right-panel h2 {
            margin-bottom: 30px;
            color: #333;
            font-size: 2em;
            font-weight: 700;
            text-align: center;
        }

    .form-group {
        margin-bottom: 25px;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #333;
            font-size: 1.2em;
            font-weight: 400;
            text-align: left;
            width: calc(100% - 10px);
            max-width: 350px;
        }

        .form-group input {
            width: calc(100% - 10px);
            max-width: 350px;
            padding: 10px 10px 10px 40px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 1.1em;
            font-family: 'Roboto', sans-serif;
            height: 40px;
            box-sizing: border-box;
        }

        .form-group .text-danger {
            font-size: 1em;
            color: #d9534f;
            text-align: center;
        }

        .form-group .fa {
            position: absolute;
            left: 12px;
            top: 70%;
            transform: translateY(-50%);
            color: #666;
            font-size: 1em;
            line-height: 40px;
        }

    .btn-primary {
        background-color: #116AEF !important;
        border: none !important;
        color: #fff !important;
        font-size: 1.2em !important;
        font-weight: 700 !important;
        border-radius: 6px !important;
        padding: 12px 35px !important; /* Reducir padding vertical (antes 22px) */
        display: inline-flex !important;
        align-items: center !important;
        justify-content: center !important;
        margin: 0 auto !important;
        width: auto !important;
        min-width: 150px !important;
        line-height: normal !important; /* Evita desplazamiento vertical */
        height: auto !important; /* Asegura que no haya altura fija conflictiva */
    }

        .btn-primary:hover {
            background-color: #0d5cd1;
        }

    .validation-summary-errors {
        color: #d9534f;
        font-size: 1em;
        margin-top: 20px;
        text-align: center;
    }
</style>

<div class="login-container">
    <div class="left-panel">
        CLINICA DENTAL
    </div>
    <div class="right-panel">
        <h2>Iniciar Sesión</h2>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.usuario, "Usuario")
                <i class="fa fa-user"></i>
                @Html.TextBoxFor(m => m.usuario, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.usuario, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.clave, "Contraseña")
                <i class="fa fa-lock"></i>
                @Html.PasswordFor(m => m.clave, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.clave, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Iniciar Sesión" class="btn-primary" />
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}