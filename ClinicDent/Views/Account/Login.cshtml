@model ClinicDent.Models.Usuarios

@{
    ViewBag.Title = "Login";
}

<div class="login-container">
    <div class="login-form">
        <h2>Login</h2>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.usuario)
                @Html.TextBoxFor(m => m.usuario, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.usuario, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.clave)
                @Html.PasswordFor(m => m.clave, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.clave, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}