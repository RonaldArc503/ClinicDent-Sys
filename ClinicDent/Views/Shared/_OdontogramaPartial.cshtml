    }

    .leyenda-x {
        position: relative;
        width: 20px;
        height: 20px;
        margin-right: 10px;
    }

        .leyenda-x::before, .leyenda-x::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100%;
            height: 2px;
            transform-origin: center;
        }

        .leyenda-x::before {
            transform: translate(-50%, -50%) rotate(45deg);
        }

        .leyenda-x::after {
