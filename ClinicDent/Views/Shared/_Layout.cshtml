<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Clínica</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .sidebar {
            width: 250px;
            min-height: 100vh;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Barra de navegación a la izquierda -->
        <nav class="sidebar bg-dark text-white d-flex flex-column p-3">
            <h4 class="text-center">Clínica Dental</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link text-white" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Pacientes", "Index", "Pacientes", new { area = "" }, new { @class = "nav-link text-white" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link text-white" })
                </li>
            </ul>
        </nav>

        <!-- Contenido principal -->
        <div class="content">
            <div class="container">
                @RenderBody()
                <hr>
                <footer>
                    <p>&copy; @DateTime.Now.Year - Clínica XYZ</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
