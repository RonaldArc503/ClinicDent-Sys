@model ClinicDent.Models.Roles

@{
    ViewBag.Title = "Nuevo Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    .form-container {
        max-width: 700px;
        margin: 20px auto;
        padding: 25px;
        background-color: #e5e7e9;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-left: 5px solid #6c757d;
    }

    .form-title {
        color: #2c3e50;
        margin-bottom: 25px;
        text-align: left;
        font-size: 24px;
        font-weight: 600;
        padding-bottom: 10px;
        border-bottom: 1px solid #dee2e6;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        border-radius: 20px;
        padding: 10px 15px;
        border: 1px solid #ced4da;
        transition: all 0.3s ease;
        width: 100%;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    }

        .form-control:focus {
            border-color: #6c757d;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.25);
        }

    .btn-submit {
        background-color: #6c757d;
        color: white;
        padding: 10px 25px;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-top: 10px;
    }

        .btn-submit:hover {
            background-color: #5a6268;
        }

    .btn-back {
        display: inline-block;
        margin-top: 20px;
        color: #6c757d;
        text-decoration: none;
        transition: color 0.3s;
    }

        .btn-back:hover {
            color: #495057;
            text-decoration: underline;
        }

    .field-required::after {
        content: " *";
        color: #dc3545;
    }

    .input-icon {
        position: relative;
    }

        .input-icon i {
            position: absolute;
            left: 15px;
            top: 10px;
            color: #6c757d;
        }

        .input-icon input {
            padding-left: 40px;
        }
</style>

<div class="form-container">
    <h2 class="form-title">
        <i class="fas fa-user-tag"></i> Crear Nuevo Rol
    </h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label field-required">
                <i class="fas fa-tag"></i> Nombre del Rol
            </label>
            <div class="input-icon">
                @Html.EditorFor(model => model.nombre, new
           {
               htmlAttributes = new
               {
                   @class = "form-control",
                   placeholder = "Ingrese el nombre del rol",
                   required = "required"
               }
           })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn-submit">
                <i class="fas fa-save"></i> Guardar Rol
            </button>
        </div>
    }

    <div>
        <a href="@Url.Action("Index")" class="btn-back">
            <i class="fas fa-arrow-left"></i> Volver al Listado
        </a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Validación y formato del nombre del rol
            $('#nombre').on('input', function () {
                // Eliminar caracteres especiales excepto letras, números y espacios
                this.value = this.value.replace(/[^a-zA-ZáéíóúÁÉÍÓÚñÑ0-9\s]/g, '');
                // Capitalizar la primera letra
                if (this.value.length > 0) {
                    this.value = this.value.charAt(0).toUpperCase() + this.value.slice(1).toLowerCase();
                }
            });

            // Enfoque automático en el campo de nombre
            $('#nombre').focus();
        });
    </script>
}