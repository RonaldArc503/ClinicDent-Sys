@model List<System.IO.FileInfo>

@{
    ViewBag.Title = "Backups de Base de Datos - Clínica Dental";
}

<div class="container">
    <h2 class="mb-4">@ViewBag.Title</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Backups Disponibles</h5>
            <a href="@Url.Action("ExportDatabase")" class="btn btn-light btn-sm">
                <i class="fas fa-plus-circle"></i> Crear Nuevo Backup
            </a>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Nombre del Archivo</th>
                                <th>Tamaño</th>
                                <th>Fecha de Creación</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var backup in Model)
                            {
                                <tr>
                                    <td>@backup.Name</td>
                                    <td>@((backup.Length / 1024 / 1024).ToString("0.00")) MB</td>
                                    <td>@backup.CreationTime.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("DescargarBackup", new { fileName = backup.Name })"
                                               class="btn btn-primary btn-sm" title="Descargar">
                                                <i class="fas fa-download"></i>
                                            </a>
                                            @using (Html.BeginForm("EliminarBackup", "Configuraciones", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="fileName" value="@backup.Name" />
                                                <button type="submit" class="btn btn-danger btn-sm"
                                                        title="Eliminar" onclick="return confirm('¿Está seguro de eliminar este backup?');">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No hay backups disponibles. Crea un nuevo backup haciendo clic en el botón superior.
                </div>
            }
        </div>
    </div>

    <div class="alert alert-secondary">
        <strong>Ubicación de backups:</strong> @Server.MapPath("~/App_Data/Backups")
    </div>
</div>

@section scripts {
    <script>
        // Auto-ocultar mensajes después de 5 segundos
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}